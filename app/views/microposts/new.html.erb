<div class="container">
<div class="text-center">
<h1>新規投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @micropost) do |f| %>
 <%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
      <%= f.text_area :content, placeholder: "悩みを投稿してみましょう", class: 'form-control  content-count',rows: "10"%></br>
  </div>

  <div class="form-group">
      <%= f.label :tag_ids %>
      <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids', placeholder: "タグは「,」で区切ってください" %>
  </div>

  <div class="form-group">
        <%= f.label :anonymous, class: "checkbox inline" do %>
        <%= f.check_box :anonymous %>
        <span>匿名で投稿する場合は、ここにチェックを入れてください</span>
        <% end %>
  </div>
  <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
</div>
