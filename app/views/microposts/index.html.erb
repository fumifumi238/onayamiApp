<%= render 'layouts/flash_messages' %>
<%= search_form_for @q do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :content_cont,placeholder:"キーワードを入力" %>
    <%= f.search_field :tags_name_cont,placeholder:"タグを入力" %>
    <%= f.submit "検索" %>
  </div>
<% end %>
<% @microposts.each do |micropost| %>
  <div class="box">
    <p><%= link_to truncate(micropost.content,length:100),micropost %></p>
    <p class="text-right"><%= micropost.user_name %>　さん　 いいね数 : <%= micropost.likes_count %></p>
    <p class="text-right text-info"><%= how_long_ago(micropost.updated_at) %></p>
  </div>
<% end %>
<%= paginate @microposts %>
